{
	"manifest_version": 3,
	"short_name": "ImprovedTube",
	"name": "'Improve YouTube!' ðŸŽ§ (for YouTube & Videos)",
	"description": "__MSG_description_ext__",
	"version": "5.0.0",
	"default_locale": "en",
	"icons": {
		"128": "menu/icons/128.png",
		"16": "menu/icons/16.png",
		"32": "menu/icons/32.png",
		"48": "menu/icons/48.png"
	},
	"browser_specific_settings": {
		"gecko": {
		"id": "{3c6bf0cc-3ae2-42fb-9993-0d33104fdcaf}"
		}
	},
  	"background": {
    		"background.scripts": "background.js",
    		"scripts": [ "background.js" ]
  	},
	"action": {
		"default_popup": "menu/index.html",
		"default_area": "navbar"
	},
	"options_page": "menu/index.html",
	"options_ui": {
		"page": "menu/index.html"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"css": [
				"css/extension/www.youtube.com/styles.css",
				"css/extension/www.youtube.com/night-mode.css",
				"css/extension/www.youtube.com/general.css",
				"css/extension/www.youtube.com/appearance/header.css",
				"css/extension/www.youtube.com/appearance/player.css",
				"css/extension/www.youtube.com/appearance/details.css",
				"css/extension/www.youtube.com/appearance/sidebar.css",
				"css/extension/www.youtube.com/appearance/comments.css"
			],
			"exclude_matches": [
				"https://www.youtube.com/audiolibrary/*",
				"https://www.youtube.com/tv*"
			],
			"js": [
				"js/extension/core.js",
				"js/extension/functions.js",
				"js/extension/www.youtube.com/night-mode.js",
				"js/extension/www.youtube.com/general.js",
				"js/extension/www.youtube.com/appearance/sidebar.js",
				"js/extension/www.youtube.com/appearance/comments.js",
				"js/extension/init.js"
			],
			"matches": [
				"https://www.youtube.com/*"
			],
			"run_at": "document_start"
		}
	],
	"host_permissions": [ "https://www.youtube.com/*" ],
	"optional_permissions": [
		"downloads"
	],
	"permissions": [
		"contextMenus",
		"storage"
	],
	"web_accessible_resources": [{
		"resources": [
			"menu/index.html",
			"js/web-accessible/core.js",
			"js/web-accessible/functions.js",
			"js/web-accessible/www.youtube.com/appearance.js",
			"js/web-accessible/www.youtube.com/player.js",
			"js/web-accessible/www.youtube.com/themes.js",
			"js/web-accessible/www.youtube.com/playlist.js",
			"js/web-accessible/www.youtube.com/channel.js",
			"js/web-accessible/www.youtube.com/shortcuts.js",
			"js/web-accessible/www.youtube.com/blocklist.js",
			"js/web-accessible/www.youtube.com/settings.js",
			"js/web-accessible/init.js",
			"menu/icons/48.png"
		],
		"matches": [
			"https://www.youtube.com/*"
		]
	}]
}
